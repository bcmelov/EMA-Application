                        android:text="@string/push"
                        app:drawableEndCompat="@drawable/ic_waiting" />

                    <TextView
                        android:id="@+id/title_review_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_push_6"
