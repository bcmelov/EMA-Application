<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Titles in user profile (Skills, Homework)-->
    <style name="Title">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">true</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    </style>

    <style name="User_list_name">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    </style>

    <!--Username in user profile-->
    <style name="Username">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/user_name</item>
    </style>

    <!-- Circle image view -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--toggle button styles-->
    <style name="ToggleButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
        <item name="android:height">@dimen/square_icon_Xsmall</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/purple_500</item>
    </style>

</resources>