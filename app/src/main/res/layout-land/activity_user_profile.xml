        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="50dp">

        <!--switch for night/day mode-->

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/night_mode"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <!--layout for icon, user name and platform specification-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!--user icon (temporary icon of Android for now)-->

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:contentDescription="@string/user_icon"
                android:src="@drawable/ic_emoji" />

            <!--username-->

            <TextView
                style="@style/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/user_name" />

            <!--platform name-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/platform_android" />

            <!--layout for horizontal icons: Slack, Email, LinkedIn-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="10dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20sp"
                    android:background="@drawable/ic_slack"
                    android:backgroundTint="?attr/colorControlNormal"
                    android:contentDescription="@string/slack" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20sp"
                    android:background="@drawable/ic_email2"
                    android:backgroundTint="?attr/colorControlNormal"
                    android:contentDescription="@string/email" />

